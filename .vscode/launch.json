  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "request": "launch",
      "runtimeArgs": ["dev"],
      "runtimeExecutable": "yarn",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
    }
  ]
}
